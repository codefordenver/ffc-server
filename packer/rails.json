{
  "variables": {
    "digitalocean_token": "{{env `DIGITALOCEAN_TOKEN`}}",
    "from_email_address": "{{env `FROM_EMAIL_ADDRESS`}}",
    "mandrill_username": "{{env `MANDRILL_USERNAME`}}",
    "mandrill_api_key": "{{env `MANDRILL_API_KEY`}}",
    "smtp_domain": "{{env `SMTP_DOMAIN`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `digitalocean_token`}}",
    "image": "ubuntu-15-04-x64",
    "region": "nyc3",
    "size": "512mb",
    "droplet_name": "atlas.rails.ffc",
    "private_networking": true,
    "snapshot_name": "rails.ffc {{timestamp}}"
  }],
  "push": {
  	"name": "codefordenver/freshfoodconnect-rails"
  },
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "FROM_EMAIL_ADDRESS={{user `from_email_address`}}",
      "MANDRILL_USERNAME={{user `mandrill_username`}}",
      "MANDRILL_API_KEY={{user `mandrill_api_key`}}",
      "SMTP_DOMAIN={{user `smtp_domain`}}"
    ],
    "inline": [
      "printenv",
      "sudo echo 'export FROM_EMAIL_ADDRESS='$FROM_EMAIL_ADDRESS >> /etc/profile.d/envvars.sh",
      "sudo echo 'export MANDRILL_USERNAME='$MANDRILL_USERNAME >> /etc/profile.d/envvars.sh",
      "sudo echo 'export MANDRILL_API_KEY='$MANDRILL_API_KEY >> /etc/profile.d/envvars.sh",
      "sudo echo 'export SMTP_DOMAIN='$SMTP_DOMAIN >> /etc/profile.d/envvars.sh"
      "sudo echo 'export DATABASE_URL='$DATABASE_URL >> /etc/profile.d/envvars.sh",
      "whoami",
      "sudo mkdir /ops",
      "sudo chmod a+w /ops"
    ]
  },
  {
    "type": "file",
    "source": ".",
    "destination": "/ops"
  },
  {
    "type": "shell",
    "script": "scripts/base.sh"
  },
  {
    "type": "shell",
    "script": "scripts/rails.sh"
  }],
  "post-processors": [{
  	"type": "atlas",
  	"artifact": "codefordenver/freshfoodconnect-rails",
  	"artifact_type": "digitalocean.image",
  	"metadata": {
  		"created_at": "{{timestamp}}",
  		"version": "{{user `version`}}"
  	}
  }]
}
